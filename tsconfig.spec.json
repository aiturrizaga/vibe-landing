/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@vibe/*": [
        "app/*"
      ],
      "@vibe/env/*": [
        "environments/*"
      ],
      "@vibe/shared/*": [
        "app/shared/*"
      ],
      "@vibe/core/*": [
        "app/core/*"
      ]
    },
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ]
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
